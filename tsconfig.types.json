{
  "include": [
    "lib/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**.spec.js",
    "**.test.js"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "declarationMap": true,
  }
}
